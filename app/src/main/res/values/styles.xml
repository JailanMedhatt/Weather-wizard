<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomDatePickerDialog" parent="Theme.Material3.Light.Dialog">
        <!-- Background Colors -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorAccent">@color/white</item>

        <!-- Main Text Colors -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>

        <!-- Button Text Colors (OK, Cancel) -->
        <item name="android:buttonBarPositiveButtonStyle">@style/BlackTextButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/BlackTextButton</item>
    </style>


    <style name="CustomTimePickerDialog" parent="Theme.Material3.Light.Dialog">
        <!-- Background Color -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorAccent">@color/white</item>

        <!-- Text Color Inside Dialog -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>

        <!-- Button Text Color -->
        <item name="android:buttonBarPositiveButtonStyle">@style/BlackTextButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/BlackTextButton</item>
    </style>
    <style name="BlackTextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>